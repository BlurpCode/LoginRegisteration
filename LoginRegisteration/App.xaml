<Application x:Class="LoginRegisteration.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LoginRegisteration"
             xmlns:view ="clr-namespace:LoginRegisteration.View"
             xmlns:viewModel ="clr-namespace:LoginRegisteration.ViewModel"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModel:LoginViewModel}">
            <view:LoginView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:RegistrationViewModel}">
            <view:RegistrationView/>
        </DataTemplate>
    </Application.Resources>
</Application>
